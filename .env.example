# Application
APP_NAME=Docify
APP_VERSION=2.0.0
DEBUG=True

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Database
DATABASE_URL=postgresql://docify:docify@localhost:5433/docify

# Redis
REDIS_URL=redis://redis:6379/0

# Embeddings
EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2
EMBEDDING_DIMENSION=768
BATCH_SIZE=32

# LLM
OLLAMA_BASE_URL=http://localhost:11434
DEFAULT_MODEL=mistral

# Hardware Detection (auto-detected if not set)
ENABLE_GPU=auto
FORCE_CPU=false

# Optional Cloud LLM (leave empty for local-only)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# File Upload
MAX_UPLOAD_SIZE=104857600
UPLOAD_DIR=./uploads

# Chunking
DEFAULT_CHUNK_SIZE=512
CHUNK_OVERLAP=50
